<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp">

    <TextView
        android:id="@+id/countdown_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="IDLE" />

    <TextView
        android:id="@+id/balance_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="IDLE" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ProgressBar
            android:id="@+id/speedboost_purchase_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/purchase_speedboost_btn"
            android:layout_alignLeft="@+id/purchase_speedboost_btn"
            android:layout_alignRight="@+id/purchase_speedboost_btn"
            android:padding="3dp" />


        <Button
            android:id="@+id/purchase_speedboost_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Purchase speed boost" />
    </RelativeLayout>


</LinearLayout>