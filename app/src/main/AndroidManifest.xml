<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.psiphon3.subscription"
    android:installLocation="auto">

    <application
        android:name="com.psiphon3.PsiphonApplication"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name_psiphon_pro"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:label">

        <!-- Required for newer devices -->
        <activity
            android:name="com.psiphon3.StatusActivity"
            android:label="@string/app_name_psiphon_pro"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.psiphon3.FeedbackActivity"
            android:label="@string/app_name_psiphon_pro">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "psiphon://feedback” -->
                <data
                    android:host="feedback"
                    android:scheme="psiphon" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.psiphon3.psiphonlibrary.MoreOptionsPreferenceActivity"
            android:label="@string/app_name_psiphon_pro"></activity>
        <activity
            android:name="com.psiphon3.PaymentChooserActivity"
            android:label="@string/app_name_psiphon_pro"></activity>

        <activity android:name="com.psiphon3.kin.KinActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.psiphon3.StatusActivity" />
        </activity>

        <activity
            android:name="org.zirco.ui.activities.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="false"
            android:label="@string/browser_task_label"
            android:launchMode="singleTask"
            android:taskAffinity=":PsiphonBrowserTask"
            android:theme="@style/ZircoTheme"></activity>

        <activity android:name="org.zirco.ui.activities.AboutActivity" />
        <activity android:name="org.zirco.ui.activities.EditBookmarkActivity" />

        <activity android:name="org.zirco.ui.activities.BookmarksListActivity" />

        <activity android:name="org.zirco.ui.activities.HistoryListActivity" />

        <activity android:name="org.zirco.ui.activities.DownloadsListActivity" />
        <activity android:name="org.zirco.ui.activities.AdBlockerWhiteListActivity" />
        <activity android:name="org.zirco.ui.activities.BookmarksHistoryActivity" />
        <activity android:name="org.zirco.ui.activities.ChangelogActivity" />
        <activity android:name="org.zirco.ui.activities.preferences.PreferencesActivity" />
        <activity android:name="org.zirco.ui.activities.preferences.HomepagePreferenceActivity" />
        <activity android:name="org.zirco.ui.activities.preferences.SearchUrlPreferenceActivity" />
        <activity android:name="org.zirco.ui.activities.preferences.UserAgentPreferenceActivity" />
        <activity android:name="org.zirco.ui.activities.MobileViewListActivity" />
        <activity android:name="org.zirco.ui.activities.DesktopViewListActivity" />
        <activity android:name="org.zirco.ui.activities.WeaveBookmarksListActivity" />
        <activity android:name="org.zirco.ui.activities.preferences.WeavePreferencesActivity" />
        <activity android:name="org.zirco.ui.activities.preferences.WeaveServerPreferenceActivity" />
        <activity
            android:name="com.mopub.mobileads.MoPubActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.mopub.mobileads.MraidActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.mopub.common.MoPubBrowser"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.mopub.mobileads.MraidVideoPlayerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.mopub.mobileads.RewardedMraidActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity
            android:name="com.mopub.common.privacy.ConsentDialogActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="${admobAppId}" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <provider
            android:name="com.psiphon3.psiphonlibrary.LoggingProvider"
            android:authorities="com.psiphon3.subscription.LoggingProvider"
            android:exported="false"></provider>
        <provider
            android:name="org.zirco.providers.ZircoBookmarksContentProvider"
            android:authorities="org.zirco.providers.psiphonsubscriptionzircobookmarkscontentprovider"
            android:exported="false" />
        <provider
            android:name="org.zirco.providers.WeaveContentProvider"
            android:authorities="org.zirco.providers.psiphonsubscriptionweavecontentprovider"
            android:exported="false" /> <!-- Rewarded Video and Rewarded Playables -->
        <service
            android:name="com.psiphon3.psiphonlibrary.TunnelService"
            android:exported="false"
            android:label="@string/app_name_psiphon_pro"
            android:process=":TunnelService"></service>
        <service
            android:name="com.psiphon3.psiphonlibrary.TunnelVpnService"
            android:exported="false"
            android:label="@string/app_name_psiphon_pro"
            android:permission="android.permission.BIND_VPN_SERVICE"
            android:process=":TunnelService">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>

            <meta-data
                android:name="android.net.VpnService.SUPPORTS_ALWAYS_ON"
                android:value="true" />
        </service>
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <uses-sdk tools:overrideLibrary="ca.psiphon,com.mopub.mobileads.banner,com.mopub.mobileads.base,     com.mopub.mobileads.interstitial,com.mopub.mobileads.rewarded_video,com.moat.analytics.mobile.mpub" />

</manifest>